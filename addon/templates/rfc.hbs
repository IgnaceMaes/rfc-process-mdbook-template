{{! template-lint-disable no-action no-curly-component-invocation no-implicit-this no-link-to-positional-params require-button-type }}
<div class="page">
  <div class="menu-bar">
    <div class="left-buttons">
      <button class="reset" {{action "toggleSidebar"}}>
        <i class="fa fa-bars" ></i>
      </button>
    </div>
  </div>
  <div class="content">
    {{markdown-to-html model.content tagName=""}}
  </div>
</div>

{{#if previousRFC}}
  {{#link-to "rfc" previousRFC class="nav-chapters previous"}}
    <i class="fa fa-angle-left"></i>
  {{/link-to}}
{{else}}
  {{#link-to "index" class="nav-chapters previous"}}<i class="fa fa-angle-left"></i>{{/link-to}}
{{/if}}

{{#if nextRFC}}
  {{#link-to "rfc" nextRFC class="nav-chapters next"}}
    <i class="fa fa-angle-right"></i>
  {{/link-to}}
{{/if}}